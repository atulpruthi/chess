# Backend Environment Variables

# Server
PORT=5000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/chess_db
# Or for MongoDB: mongodb://localhost:27017/chess_db

# JWT
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Stockfish (Chess Engine)
STOCKFISH_PATH=/path/to/stockfish

# AI Services (for commentary)
OPENAI_API_KEY=your_openai_api_key
# or
ANTHROPIC_API_KEY=your_anthropic_api_key

# Text-to-Speech
TTS_SERVICE=google # google, aws, or elevenlabs
GOOGLE_CLOUD_TTS_KEY=your_google_key
AWS_POLLY_ACCESS_KEY=your_aws_key
AWS_POLLY_SECRET_KEY=your_aws_secret
ELEVENLABS_API_KEY=your_elevenlabs_key

# Cloud Storage (for video files)
AWS_S3_BUCKET=chess-videos
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=us-east-1

# Redis (for video processing queue)
REDIS_URL=redis://localhost:6379

# CDN
CLOUDFRONT_URL=https://your-cdn-url.cloudfront.net
